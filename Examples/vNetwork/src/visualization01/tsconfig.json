{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true, //false, // true,
    "strictNullChecks": true,
    "module": "ES2015",
    "target": "ES2017",
    "jsx": "preserve",
    "allowJs": true,

    "allowImportingTsExtensions": true, //false, //true,
    "resolveJsonModule": true,
    "noEmit": true, //false, //true,

    "moduleResolution": "node",
    "types": ["jest"],

    // Import non-ES modules as default imports.
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["../../helpers/*"],
      "@moodtypes/*": ["../../typescript-transformer/types/*"],
      "@core/*": ["./*"]
    }
  },
  "include": [
    "../../helpers/**/*",
    "../../globals/*",
    "../../typescript-transformer/types/*",
    "./**/*",
    "../*.d.ts"
  ],
  "exclude": ["./*.json", "**/*.json"]
}
